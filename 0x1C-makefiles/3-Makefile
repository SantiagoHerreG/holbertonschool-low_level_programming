CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm
.PHONY: clean oclean fclean re
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
$(OBJ):
clean:
	$(RM) -f *~ holberton
oclean:
	$(RM) -f main.o holberton.o
fclean:
	$(RM) -f *~ holberton
	$(RM) -f main.o holberton.o
re: oclean $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
